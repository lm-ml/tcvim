<?xml version='1.0' encoding='utf-8'?>
<plugin id="TcvIM" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>TcvIM</name>
    <js-module name="TcvIM" src="www/TcvIM.js">
        <clobbers target="cordova.plugins.TcvIM"/>
    </js-module>

    <platform name="android">
        <source-file src="src/android/FirstToast.java"
                     target-dir="src/com/first/toast"/>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FirstToast">
                <param name="android-package" value="com.first.toast.FirstToast"/>
            </feature>
        </config-file>
    </platform>
</plugin>
